{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"]
}
